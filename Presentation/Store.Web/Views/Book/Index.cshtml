@model Book

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<p><strong>@Model.Author</strong></p>
<p>@Model.Desscription</p>
<p><strong>price: </strong>@Model.Price</p>
<form action="@Url.Action("AddItem", "Order")" method="post">
    <input type="hidden" name="bookId" value="@Model.Id" />
    <input type="text" name="count" value="1" />
    <button class="btn btn-outline-success m-lg-2" type="submit">Add to Cart</button>
</form>
